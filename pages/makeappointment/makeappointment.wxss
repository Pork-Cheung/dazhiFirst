/* pages/makeappointment/makeappointment.wxss */

.section{
  position: relative;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.picker{
  border: 1px solid #BBBBBB;
  background-color: #F8F8F8;
  border-radius: 5px;
  text-align: center;
}

.patientCard{
  height: 150rpx;
  border: 1px solid #BBBBBB;
  background-color: #F8F8F8;
}

.patientCardIcon{
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  height: 50rpx;
  width: 50rpx;
}

.symptom{
  border: 1px solid #BBBBBB;
  background-color: #F8F8F8;
}

.symptomInput{
  height: 300rpx;
  margin: 10rpx;
  padding: 10rpx;
  border: 1px solid #000000;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.submitButton{
  position: fixed;
  width:500rpx;
  height:70rpx;
  bottom: 10rpx;
  border-radius: 50rpx;
  background-color: #5677FC;
  
}

.submitButton image{
  width: 100rpx;
  height: 60rpx;
  margin: 5rpx 5rpx;
}

.button-hover{
  box-shadow:0px 0px 8px #000 inset; 
}
